# ============= UNIFIED MCP CONFIGURATION =============

# Graphiti + LadybugDB (Knowledge Graph Memory)
GRAPHITI_ENABLED=true
GRAPHITI_DATABASE=unified_mcp_memory
GRAPHITI_DB_PATH=~/.unified-mcp/memories

# LLM Provider for Graphiti (optional - Claude SDK can handle RAG)
# Options: openai, anthropic, azure_openai, ollama, google
GRAPHITI_LLM_PROVIDER=openai

# Embedder Provider for Graphiti (for semantic search)
# Options: openai, voyage, azure_openai, ollama, google
GRAPHITI_EMBEDDER_PROVIDER=openai

# OpenAI (for embeddings or LLM)
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Anthropic (for LLM only - needs separate embedder)
ANTHROPIC_API_KEY=sk-ant-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Voyage AI (for embeddings - works well with Anthropic LLM)
VOYAGE_API_KEY=pa-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Google AI (for both LLM and embeddings)
GOOGLE_API_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Azure OpenAI (for both LLM and embeddings)
AZURE_OPENAI_API_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
AZURE_OPENAI_BASE_URL=https://your-resource.openai.azure.com
AZURE_OPENAI_LLM_DEPLOYMENT=gpt-4
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=text-embedding-ada-002

# Ollama (local LLM and embeddings)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_LLM_MODEL=deepseek-r1:7b
OLLAMA_EMBEDDING_MODEL=nomic-embed-text
OLLAMA_EMBEDDING_DIM=768

# ============= CLAUDE-MEM CONFIGURATION =============
# Claude-mem runs as a background service on localhost:37777
# No additional configuration needed if using default port

# ============= CAPABILITY SETTINGS =============
# Enable/disable capabilities dynamically
CAPABILITY_CODE_UNDERSTANDING_ENABLED=true
CAPABILITY_DOCUMENTATION_ENABLED=true
CAPABILITY_BROWSER_AUTOMATION_ENABLED=true
CAPABILITY_MEMORY_SEARCH_ENABLED=true
CAPABILITY_KNOWLEDGE_GRAPH_ENABLED=true
